{
  "name": "usewebmcp",
  "version": "0.1.1",
  "description": "Standalone React hooks for strict core WebMCP tool registration with navigator.modelContext",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "react",
    "hooks",
    "react-hooks",
    "browser",
    "ai",
    "assistant",
    "tools",
    "zod",
    "usewebmcp"
  ],
  "homepage": "https://github.com/WebMCP-org/npm-packages#readme",
  "bugs": {
    "url": "https://github.com/WebMCP-org/npm-packages/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebMCP-org/npm-packages.git",
    "directory": "packages/usewebmcp"
  },
  "license": "MIT",
  "author": "WebMCP Team",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "build:prod": "NODE_ENV=prod tsdown",
    "check": "biome check --write .",
    "clean": "rm -rf dist .turbo",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "prepublishOnly": "pnpm run build:prod",
    "publish:dry": "pnpm publish --access public --dry-run",
    "publish:npm": "pnpm publish --access public",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mcp-b/webmcp-types": "workspace:*",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@mcp-b/global": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "playwright": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "vitest-browser-react": "^2.0.4",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "zod": "^3.25.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
